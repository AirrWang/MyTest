<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.iningke.myapplication.iflytek.IFlyTekSpeechActivity">

    <EditText
        android:id="@+id/iFly_edit"
        android:layout_width="match_parent"
        android:lines="3"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/iFly_btnSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朗读" />

    <Button
        android:id="@+id/iFly_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消" />

    <Button
        android:id="@+id/iFly_btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停" />

    <Button
        android:id="@+id/iFly_btnResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继续" />

</LinearLayout>
